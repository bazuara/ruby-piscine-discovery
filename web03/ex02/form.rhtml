<html>
	<head>
    	<meta charset="utf-8"/>
	</head>
  <body>
		<form>
			<label for="name">Nombre:</label><br>
			<input type="text" id="name" name=name><br>
			<label for="last_name">Apellido:</label><br>
            <input type="text" id="last_name" name=last_name><br>
			<label for="age">Edad:</label><br>
            <input type="text" id="age" name=age><br>
			<button type="submit" value="Submit">Submit</button>
		</form>
    <hr>
    <%=
      name = servlet_request.query['name']
	  last_name = servlet_request.query['last_name']
	  age = servlet_request.query['age'].to_i
	  stuff = [
		  ["Peter", "Flanagan", 19],
		  ["Mike" "Wasowski", 344],
		  ["Rolling", "Stone", 999]
	  ]
	  unless name == nil
		  b = 0
		  s = 0
		  stuff.each do |x|
			  if (x[2].to_i > age.to_i)
				  b += 1
			  else
				  s += 1
			  end
		  end
		  stuff << [name, last_name, age]
		  p stuff.sort_by!(&:last)
		  p "Hola%#{name}, tienes mÃ¡s edad que #{b} y menos edad que #{s} personas\n"
	  end
    %>
    </hr>
    <h4>fin</h4>
  </body>
</html>
